<?xml version="1.0" encoding="UTF-8" ?>
<resources>

    <!-- Application theme -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">false</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:textCursorDrawable">@null</item>

<!--        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>-->

            <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

    <!-- For each individual Spinner list item once clicked on -->
    <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme.Base">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/med_gray</item>

        <item name="android:statusBarColor">@color/dark_gray</item>
    </style>

    <style name="AppTheme.Menu" parent="AppTheme.Base">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Base">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

  <style name="spinnerItemStyle">
    <item name="android:textSize">@dimen/text_tinier</item>
    <item name="android:textColor">#000000</item>
  </style>

<style name="spinnerDropDownItemStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
    <item name="android:textSize">@dimen/text_tinier</item>
    <item name="android:textColor">#000000</item>
  </style>

      <style name="Theme.GridviewTitles" parent="AppTheme">
    <item name="android:textSize">@dimen/text_tinier</item>
    <item name="android:textIsSelectable">true</item>
    <item name="android:inputType">none</item>
    <item name="android:maxLines">1</item>
    <item name="android:freezesText">true</item>
    <item name="android:layout_gravity">fill_horizontal</item>
    <item name="android:gravity">start</item>
    <item name="android:singleLine">true</item>

  </style>

  <style name="Theme.GridviewValues" parent="AppTheme">
    <item name="android:textSize">@dimen/text_tinier</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">1</item>
    <item name="android:textIsSelectable">true</item>
    <item name="android:freezesText">true</item>
    <item name="android:layout_gravity">fill_horizontal</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:inputType">none</item>
    <item name="android:singleLine">true</item>
    <item name="android:gravity">end</item>

  </style>

       <style name="MySpinnerLook" 
        parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/text_tinier</item>
        <item name="overlapAnchor">false</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

           <style name="TextHeadings" 
        parent="@style/AppTheme">
        <item name="android:textSize">@dimen/text_very_huge</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextHeading</item>
        <item name="android:textStyle">bold</item>
    </style>

               <style name="LeadHeadings" 
        parent="@style/AppTheme">
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>